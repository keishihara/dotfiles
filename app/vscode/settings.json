{
  // editor
  "editor.codeActionsOnSave": {
    "source.organizeImports": "never"
  },
  "editor.formatOnPaste": false,
  "editor.bracketPairColorization.enabled": true,
  "editor.bracketPairColorization.independentColorPoolPerBracketType": true,
  "editor.guides.bracketPairs": true,
  "editor.cursorBlinking": "smooth", // カーソルが滑らかに点滅
  "editor.cursorSmoothCaretAnimation": "on", // カーソルの点滅をアニメーション表示
  "editor.fontLigatures": true, // 合字を有効化
  "editor.renderControlCharacters": true, // 制御文字表示
  "editor.renderWhitespace": "all", // スペース表示
  "editor.rulers": [
    80,
    100
  ], // 縦線
  "editor.suggest.preview": true, // オートコンプリートのプレビューを表示
  "editor.suggestSelection": "recentlyUsedByPrefix", // 入力時の補完候補選択
  // python formatting
  "python.formatting.provider": "autopep8",
  "python.linting.flake8Enabled": false,
  "python.linting.lintOnSave": false,
  "python.linting.flake8Args": [
    "--max-line-length=120",
    "--ignore=E203,E266,W503,E402"
  ],
  "python.formatting.autopep8Args": [
    "--max-line-length=120",
    "--ignore=E203,E266,W503,E402"
  ],
  // workbench
  "workbench.colorCustomizations": {
    "[GitHub Dark]": {
      "editor.findMatchBorder": "#FDFF0C",
      "editor.findMatchBackground": "#ff0000",
      "editor.findMatchHighlightBackground": "#ff0000"
    }
  }, // タブが多いときに折り返す
  "workbench.iconTheme": "vscode-icons-mac",
  "workbench.tree.indent": 15,
  "files.maxMemoryForLargeFilesMB": 1,
  "editor.accessibilitySupport": "off",
  "files.trimTrailingWhitespace": true,
  "jupyter.askForKernelRestart": false,
  "remote.SSH.connectTimeout": 120,
  "remote.SSH.useLocalServer": false,
  "[python]": {},
  "workbench.colorTheme": "Dracula Theme",
  "editor.minimap.renderCharacters": false,
  "editor.minimap.scale": 2,
  "editor.minimap.showSlider": "always",
  "notebook.output.scrolling": true,
  "notebook.output.wordWrap": true,
  "security.workspace.trust.untrustedFiles": "open",
  "git.enabled": true,
  "window.zoomLevel": -1,
  "notebook.output.textLineLimit": 60,
  "remote.SSH.remotePlatform": {
    "awsgpu02": "linux",
    "__dgx": "linux",
    "__gpu01": "linux",
    "kc-desktop": "linux"
  },
  "remote.SSH.useExecServer": false,
  "notebook.lineNumbers": "on",
  "editor.minimap.size": "fit"
}